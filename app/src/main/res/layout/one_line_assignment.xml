<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/one_line_assignment"
    android:layout_margin="5sp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/isCompleteCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-7dp"
                />

            <!-- Title -->
            <TextView
                android:id="@+id/cl_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NULL Title"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <!-- Date Time -->
            <LinearLayout
                android:id="@+id/cl_dateTimeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30sp"
                android:layout_gravity="center"
                >
                <TextView
                    android:id="@+id/cl_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:text="NULL Date"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:text=", "
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/cl_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NULL Time"
                    android:textSize="16sp"/>

            </LinearLayout>



        </LinearLayout>

        <!-- Tag -->
        <TextView
            android:id="@+id/cl_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:layout_marginBottom="10sp"
            android:textSize="16sp"
            android:text="" />

        <!-- Class and Location -->
        <TextView
            android:id="@+id/cl_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:textColor="@color/gray"
            android:text="NULL Class" />
        <TextView
            android:id="@+id/cl_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:paddingBottom="15sp"
            android:textColor="@color/l_gray"
            android:text="NULL Location" />


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
