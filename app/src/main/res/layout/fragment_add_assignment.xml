<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddClass">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please add a new to-do list item" />

        <EditText
            android:id="@+id/assignment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Title"
            android:inputType="text" />

        <EditText
            android:id="@+id/assignment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Date"
            android:inputType="datetime" />

        <EditText
            android:id="@+id/assignment_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Time"
            android:inputType="time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Type:"
            android:textSize="12sp"
            android:textColor="@color/l_gray"
            />
        <RadioGroup
            android:id="@+id/itemTypeRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            >

            <RadioButton android:id="@+id/radio_listitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="List Item"/>

            <RadioButton android:id="@+id/radio_assignment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assignment"/>

            <RadioButton android:id="@+id/radio_exam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exam"/>

        </RadioGroup>

        <EditText
            android:id="@+id/assignment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Course Name"
            android:visibility="gone"
            android:inputType="text" />

        <EditText
            android:id="@+id/assignment_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Location"
            android:visibility="gone"
            android:inputType="text" />

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:onClick="addAssignment"
            android:text="OK" />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel" />

        <Button
            android:id="@+id/del_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date" />

    </LinearLayout>

</RelativeLayout>